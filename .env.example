############################################
# AMBIENTE
############################################

# Ambiente de execução
ENV=local
DEBUG=false

############################################
# NIBO - API
############################################

# URL base da API do Nibo
NIBO_BASE_URL=https://api.nibo.com.br

# Token de autenticação da API
# (NUNCA commitar o token real)
NIBO_TOKEN=SEU_TOKEN_AQUI

# ID da empresa/conta no Nibo
NIBO_COMPANY_ID=ID_DA_EMPRESA_NO_NIBO

############################################
# PROCESSAMENTO DE BOLETOS (PASTAS)
############################################

# Pasta onde os PDFs chegam
INPUT_DIR=boletos/entrada

# Pasta usada durante o processamento
PROCESSING_DIR=boletos/processando

# Pasta final para PDFs processados com sucesso
PROCESSED_DIR=boletos/processados

# Pasta final para PDFs com erro
ERROR_DIR=boletos/erro

############################################
# IDOTEMPOTÊNCIA / SEGURANÇA
############################################

# Habilita controle de idempotência
IDEMPOTENCY_ENABLED=true

# Estratégia de idempotência
# valores possíveis: linha_digitavel | cnpj_venc_valor | hash_pdf
IDEMPOTENCY_STRATEGY=cnpj_venc_valor

############################################
# LOGS
############################################

# Nível de log: DEBUG | INFO | WARNING | ERROR
LOG_LEVEL=INFO

# Pasta para logs (se aplicável)
LOG_DIR=logs

############################################
# EXECUÇÃO
############################################

# Quantidade máxima de PDFs processados por execução
MAX_FILES_PER_RUN=50

# Timeout padrão para chamadas HTTP (em segundos)
HTTP_TIMEOUT=30
